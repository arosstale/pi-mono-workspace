# Service Configuration
# Copy to .env and fill in your tokens

# Discord (for Prospector Agent)
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_IDS=123456789,987654321  # Server IDs to monitor

# LinkedIn (for Prospector + Outreach)
LINKEDIN_USERNAME=your_linkedin_email
LINKEDIN_PASSWORD=your_linkedin_password
# OR use LinkedIn Sales Navigator API key
LINKEDIN_SALES_NAVIGATOR_KEY=your_api_key

# Email (for Outreach)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=Artale <your_email@gmail.com>

# Telegram (for notifications)
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_CHAT_ID=your_chat_id

# WhatsApp Business (for Italy outreach)
WHATSAPP_BUSINESS_ID=your_business_id
WHATSAPP_ACCESS_TOKEN=your_access_token

# OpenClaw (for agent execution)
OPENCLAW_API_KEY=your_openclaw_key
OPENCLAW_GATEWAY_URL=http://localhost:18789

# Netlify (for deployment)
NETLIFY_AUTH_TOKEN=your_token_from_netlify

# Database (for pipeline)
DATABASE_URL=postgresql://user:pass@localhost:5432/artale_leads

# RAG Model (for Strategist)
HUGGINGFACE_API_KEY=your_hf_key  # Optional, for better embeddings