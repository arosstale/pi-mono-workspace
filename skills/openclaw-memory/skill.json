{
  "name": "openclaw-memory",
  "version": "1.2.0",
  "description": "OpenClaw memory management with enhanced security - Search, compress, encrypt, authenticate, rate limit, and audit AGENTS.md, MEMORY.md, and memory/ directory",
  "author": "Pi-Agent",
  "license": "MIT",
  "keywords": ["openclaw", "memory", "search", "compression", "agents", "security", "encryption", "authentication", "rate-limiting", "audit"],
  "main": "openclaw-memory.sh",
  "assets": {
    "logo": "assets/icon.png",
    "banner": "assets/banner.png"
  },
  "dependencies": {
    "openclaw": ">=2.0"
  },
  "modules": [
    "encryption.sh",
    "authentication.sh",
    "rate-limit.sh",
    "audit.sh"
  ],
  "capabilities": [
    "memory_search",
    "memory_compress",
    "agents_list",
    "memory_stats",
    "file_encryption",
    "user_authentication",
    "rate_limiting",
    "security_audit",
    "security_hardened"
  ],
  "security": {
    "v1.1_features": [
      "input_validation",
      "command_whitelisting",
      "path_traversal_protection",
      "command_injection_prevention",
      "dos_protection",
      "security_logging"
    ],
    "v1.2_features": [
      "aes_256_gcm_encryption",
      "pbkdf2_key_derivation",
      "api_key_authentication",
      "session_management",
      "token_bucket_rate_limiting",
      "permission_auditing",
      "auto_fix_vulnerabilities"
    ]
  }
}
